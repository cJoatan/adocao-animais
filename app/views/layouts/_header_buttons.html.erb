
<% if user_signed_in? %>
	<div class="row">
		</br>
		<div class="hidden-xs hidden-sm col-xs-12">
			<div class="col-md-3"></div>
			<div class="col-md-6 text-center">
				<%= link_to new_adoption_path, class: "btn btn-app" do %>
					<i class="fa fa-plus"></i>
					Nova adoção
				<% end %>

				<%= link_to user_adoptions_created_path(current_user.id), class: "btn btn-app" do %>
					<i class="fa fa-share"></i>
					Meus pedidos de adoção
				<% end %>

				<%= link_to user_adopted_path(current_user.id), class: "btn btn-app" do %>
					<i class="fa fa-heart"></i>
					Minhas adoções
				<% end %>
			</div>
			<div class="col-md-3"></div>
		</div>
		<div class="hidden-md hidden-lg col-xs-12">
			<div class="col-xs-4">
				<%= link_to new_adoption_path, class: "btn btn-app" do %>
					<i class="fa fa-plus"></i>
					Adicionar
				<% end %>
			</div>
			<div class="col-xs-4">
				<%= link_to user_adoptions_created_path(current_user.id), class: "btn btn-app col-xs-4" do %>
					<i class="fa fa-share"></i>
					Pedidos
				<% end %>
			</div>

			<div class="col-xs-4">
				<%= link_to user_adopted_path(current_user.id), class: "btn btn-app col-xs-4" do %>
					<i class="fa fa-heart"></i>
					Adoções
				<% end %>
			</div>
		</div>
	</div>
<% end %>

