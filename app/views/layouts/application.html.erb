<!DOCTYPE html>
<html>
  <head>
    <title>Meupet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width" />
  </head>

  <% unless @session_page %>
	  <body class="skin-red-light layout-top-nav">
		  <div class="wrapper">
	      <header class="main-header">
	        <nav class="navbar navbar-static-top">
	        	<div class="container">
	        		<div class="navbar-header">
	        			<%= link_to "Meupet", root_path, class: "navbar-brand"%>
	        		</div>
	        		<div class="collapse navbar-collapse pull-left" id="navbar-collapse">
								<ul class="nav navbar-nav">
									<% if can? :manage, Animal %>
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">
												Animais
												<span class="caret"></span>
											</a>
											<ul class="dropdown-menu" role="menu">
												<li>
													<%=link_to 'Lista', animals_path %>
												</li>
												<li>
													<%= link_to 'Criar', new_animal_path %>
												</li>
											</ul>
										</li>
									<% end %>
									<% if can? :manage, Breed %>
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">
												Raças
												<span class="caret"></span>
											</a>
											<ul class="dropdown-menu" role="menu">
												<li>
													<%=link_to 'Lista', breeds_path %>
												</li>
												<li>
													<%= link_to 'Criar', new_breed_path %>
												</li>
											</ul>
										</li>
									<% end %>
									<% if can? :manage, User %>
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">
												Usuários
												<span class="caret"></span>
											</a>
											<ul class="dropdown-menu" role="menu">
												<li>
													<%=link_to 'Lista', users_path %>
												</li>
												<li>
													<%= link_to 'Criar', new_user_path %>
												</li>
											</ul>
										</li>
									<% end %>
									<% if can? :manage, User %>
										<li>
											<a href="#">Imagens</a>
										</li>
									<% end %>
								</ul>
	      			</div>
	      			<div class="navbar-custom-menu">
								<% if user_signed_in? %>
									<ul class="nav navbar-nav">
										<li class="user user-menu">
	      							<%= link_to edit_user_registration_path do %>
	      								<%= image_tag current_user.avatar.url(:thumb), class: "user-image" %>
	      								<span class="hidden-xs"><%= current_user.user_name %></span>
	      								<i class="fa fa-gears"></i>
	      							<% end %>
										</li>
										<li>
	      							<%= link_to destroy_user_session_path, method: :delete do %>
												<%= t("logout")%> <i class="fa fa-sign-out"></i>
	      							<% end %>
										</li>
									</ul>
								<% else %>
									<ul class="nav navbar-nav">
										<li>
	      							<%= link_to new_user_registration_path do %>
	      								<%= t "signup" %> <i class="fa fa-user-plus"></i>
	      							<% end %>
										</li>
										<li>
	      							<%= link_to new_user_session_path do %>
	      								<%= t "login" %> <i class="fa fa-sign-in"></i>
	      							<% end %>
										</li>
									</ul>
								<% end %>
							</div>
	        	</div> 
	        </nav>

	      </header>

	      <div class="content-wrapper">
	      	<div class="container">
	      		<% if user_signed_in? %>
	      			<div class="row">
						    <div class="col-xs-12">
						    	</br>
						      <div style="margin: auto; width: 50%;">
						        <%= link_to new_adoption_path, class: "btn btn-app" do %>
						          <i class="fa fa-plus"></i>
						          Nova adoção
						        <% end %>

						        <%= link_to user_adoptions_created_path(current_user.id), class: "btn btn-app" do %>
						          <i class="fa fa-share"></i>
						          Meus pedidos de adoção
						        <% end %>

						        <%= link_to user_adopted_path(current_user.id), class: "btn btn-app" do %>
						          <i class="fa fa-heart"></i>
						          Minha adoções
						        <% end %>
						      </div>
						    </div>
						  </div>
						 <% end %>
	        	<%= yield %>
					</div>
	      </div>

	    </div>
	    <footer class="main-footer"></footer>

	  </body>
	<% else %>
		<body class="hold-transition login-page">
			<%= yield %>
		</body>
	<% end %>
</html>
