<style type="text/css">
  .asd { 
   position: fixed;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    z-index: -100;
    transform: translateX(-50%) translateY(-50%);
    background: url('/image3.gif') no-repeat;
    background-size: cover;
    transition: 1s opacity;
  }
</style>

<div class="asd">
</div>
<div class="login-box">
  <div class="login-logo">
    <h1>
      Meu<b>pet</b>
    </h1>
  </div>
  <div class="login-box-body" style="background: rgba(0,0,0,0.3);">
    <p class="login-box-msg" style="color: white">
      <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
      <%= content_tag(:div, flash[:notice], :class => "alert alert-success alert-dismissible") if flash[:notice] %>
      <%= content_tag(:div, flash[:alert], style: "color: white") if flash[:alert] %>
    </p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, placeholder: "Email",require: true, class: "form-control" %>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", require: true, class: "form-control"%>
      </div>

      <div class="row">
        <% if devise_mapping.rememberable? -%>
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label style="color:white">
                <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;">
                  <%= f.check_box :remember_me %>
                </div>
                <%= t 'remember_me' %>
              </label>
            </div>
          </div>
        <% end -%>

        <div class="col-xs-4">
          <%= f.submit t("login"), class: "btn btn-danger btn-block btn-flat" %>
        </div>
      </div>
    <% end %>
    <% link_to t("sign_up"), new_registration_path(resource_name), style: "color:white" %>
    <a href="#" id="signup-button" onclick="getButtonClicked(this)" data-toggle="modal" data-target="#signup-modal" style="color:white"><%= t 'signup'%></a><br />
    <%= link_to t("forgot_your_password?"), new_password_path(resource_name), style: "color:white" %><br />

    <% render "devise/shared/links" %>
  </div>
  <div class="box-footer" style="background: rgba(0,0,0,0.3);">
    <%= link_to adoptions_path, class: "btn btn-info btn-block btn-flat" do %>
      Visitar e visualizar pedidos de adoção
      <i class="fa fa-arrow-right" aria-hidden="true"></i>
    <% end %>
  </div>
  <div id="signup-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

      <div class="modal-content">
        <div class="modal-header">
        </div>
        <div class="modal-body">
          <%= render '/devise/registrations/form' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
</div>