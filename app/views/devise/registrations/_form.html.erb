<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <section>
    <legend>Dados pessoais</legend>
  
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :full_name %>
          <%= f.text_field :full_name, class: "form-control", required: true %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :user_name %>
          <%= f.text_field :user_name, class: "form-control", required: true  %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control", required: true  %>
    </div>

    <div class="form-group">
      <%= f.label :gender %>
      <%= f.select :gender, User.genders.keys, {}, class: "form-control" %>
    </div>
  </section>

  <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, class: "form-control", required: true  %>
  </div>

  <% unless User.exists? resource %>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", required: true  %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation%>
      <%= f.password_field :password_confirmation, class: "form-control", required: true  %>
    </div>
  <% end %>

  <section>
    <legend>Contato</legend>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group ">
          <%= f.label :tel_1 %>
          <%= f.text_field :tel_1, class: "form-control", required: true  %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :tel_2 %>
          <%= f.text_field :tel_2, class: "form-control" %>
        </div>
      </div>
    </div>
  </section>

  <section>
    <legend>Localização</legend>
  </section>
  
    <div class="form-group">
      <%= f.label :neighborhood %>
      <%= f.text_field :neighborhood, class: "form-control", required: true  %>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :adress %>
          <%= f.text_field :adress, class: "form-control", required: true  %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :adress_number %>
          <%= f.text_field :adress_number, class: "form-control", required: true  %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :complement %>
          <%= f.text_field :complement, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :cep %>
      <%= f.text_field :cep, class: "form-control", required: true  %>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control", required: true  %>
    </div>

    <div class="actions">
      <%= f.submit "Cadastrar", class:"btn btn-primary" %>
    </div>
<% end %>