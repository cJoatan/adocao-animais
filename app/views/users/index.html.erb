<section class="content-header">
  <h1><%= t '.title' %></h1>
</section>

<section class="content">
  <div class="row">
    <p id="notice"><%= notice %></p>
    
    <div class="col-xs-12">
      <div class="box box-info">
        <div class="box-header">
          <div class="box-title">Busca avançada</div>
        </div>
        <div class="box-body">
            <%= search_form_for @search do |f|%>
          <div class="box-body">

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :full_name_cont, "Nome" %>
                <%= f.text_field :full_name_cont, class: "form-control" %>
              </div>
            </div>

            <section>
              <legend>Localização</legend>
            </section>

            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :location_state_cont, "Estado" %>
                <%= f.text_field :location_state_cont, class: "form-control" %>
              </div>
            </div>

            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :location_city_cont, "Cidade" %>
                <%= f.text_field :location_city_cont, class: "form-control" %>
              </div>
            </div>

            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :location_neighborhood_cont, "Bairro" %>
                <%= f.text_field :location_neighborhood_cont, class: "form-control" %>
              </div>
            </div>

          </div>
          <div class="box-footer">
            <div class="actions col-xs-12">
              <%= f.submit "Search", class: "btn btn-info btn-flat" %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
      <div class="box box-primary">
        <div class="box-header with-border">
          <div class="box-title">Lista</div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Full name</th>
                <th>User name</th>
                <th>Adress</th>
                <th>Adress number</th>
                <th>Cep</th>
                <th>State</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Admin</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <% user.location ||= Location.new %>
                <tr>
                  <td><%= user.full_name %></td>
                  <td><%= user.user_name %></td>
                  <td><%= user.street %></td>
                  <td><%= user.address_number %></td>
                  <td><%= user.cep %></td>
                  <td><%= user.state %></td>
                  <td><%= user.gender %></td>
                  <td><%= user.age %></td>
                  <td><%= user.admin %></td>
                  <td><%= link_to 'Show', user %></td>
                  <td><%= link_to 'Edit', edit_user_path(user) %></td>
                  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>