<%= form_for(adoption) do |f| %>
  <% if adoption.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adoption.errors.count, "error") %> prohibited this adoption from being saved:</h2>

      <ul>
      <% adoption.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"  %>
  </div>

   <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control"  %>
  </div>

  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :animal %>
      <%= f.collection_select :animal_id, @animals, :id, :name, {}, class: "form-control" %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :breed %>
      <%= f.grouped_collection_select :breed_id, @animals, :breeds, :name, :id, :name, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :age, "Ano(em meses)" %>
    <%= f.number_field :age, class: "form-control"  %>
  </div>

  <section>
    <legend>Localização</legend>

    <div class="form-group">
      <div class="col-sm-off-set-2 col-xs-12">
        <div class="checkbox">
          <label>
            <%= check_box_tag :use_my_info_location, @use_my_info_location, false %>
            Usar minhas informações de localização (Se você marcar esta opção não precisa preencher o formulario de localização)
          </label>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :neighborhood %>
          <%= f.text_field :neighborhood, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :street %>
          <%= f.text_field :street, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :address_number %>
          <%= f.text_field :address_number, class: "form-control" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :complement %>
          <%= f.text_field :complement, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :cep %>
      <%= f.text_field :cep, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </section>
  <div class="actions">
    <%= f.submit nil, class:"btn btn-danger"%>
  </div>
<% end %>
